{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ user.enabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Compagny</th>
                <td>{{ user.compagny }}</td>
            </tr>
            <tr>
                <th>EloRating</th>
                <td>{{ user.eloRating }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-info" role="button">back to list</a>


    <hr/>
    <h2>Elo History </h2>
    <div class="row">
        {% include '/user/stats_elo_history.html.twig' with {'eloHistory' : eloHistory} only %}
    </div>
    <hr/>
    <h2>Stats Win / Loose </h2>
    <div class="row">
            {% for winLooseStat in winLooseStats %}
            <div class="col-lg-4 text-center">
                {% include '/user/stats_win_loose.html.twig' with {'winLooseStat' : winLooseStat} only %}
            </div>
            {% endfor %}
    </div>


{% endblock %}
